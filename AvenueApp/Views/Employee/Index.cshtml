@model Models.ViewModels.EmployeeViewModel

<h1>Add Employee</h1>

<form asp-action="Index" style="width: 500px;">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control dob" />
        <span asp-validation-for="DateOfBirth" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control salary" value="4"/>
        <span asp-validation-for="Salary"  class="text-danger" ></span>
    </div>


    <button type="submit" class="btn btn-primary">Add</button>

</form>

<h1>Employee Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Salary</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Employeeslst.Count > 0)
        {
            @foreach (var employee in ViewBag.Employeeslst)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.DateOfBirth.ToShortDateString()</td>
                    <td>@employee.Salary</td>
                    <td>@(DateTime.Now.Year - employee.DateOfBirth.Year)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4"> No record Added</td>
            </tr>
        }
    </tbody>
</table>

